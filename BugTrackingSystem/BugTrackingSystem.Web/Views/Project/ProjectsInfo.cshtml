@model IEnumerable<BugTrackingSystem.Service.Models.ProjectViewModel>


<div class="row Sort_Title_Pagination">

    <div class="content inline-block">
        Sort by:
        <div class="ui inline dropdown" style="color: #4D868D">
            <div class="text" style="font-weight: normal">Title</div>
            <i class="dropdown icon"></i>
            <div class="menu">
                <div class="item selected inlineDropdown" data-text="Title">Title</div>
                <div class="item inlineDropdown" data-text="Prefix">Prefix</div>
            </div>
        </div>
    </div>

    <div class=" pull-right" style="display: inline-block">
        <nav class="local-pagination">
            <ul class="pagination pagination-sm">
                <li><a href="#">1</a></li>
            </ul>
        </nav>
    </div>
</div>

<div class="row">
    @foreach (var project in Model)
    {

        <div class="col-sm-4 col-xs-12" id="@project.ProjectId" onmouseover="showCloseIcon(this)">
            <i class="fa fa-times-circle" style="display: none;" aria-hidden="true" onclick="DeleteProjectModalShow(@project.ProjectId)"></i>
            <a class="redirectAncore" href="@Url.Action("Project", "Project", new { projectId = project.ProjectId})">
                <div class="custom-sticker">
                    <h4><b>@project.Name</b></h4>
                    <div class="row">
                        <span class="col-lg-12 padding0" style="margin-bottom: 5px;">
                            <span class="sticker-properties"> @project.Prefix </span>
                        </span>
                        <div class="projectInfo">
                            @if (project.IsPaused)
                            {
                                <script>
                                        $('#@project.ProjectId').addClass('disabled');
                                </script>

                                <img src="../../Content/Images/Paused.png" class="inline-block" />
                            }
                            <div class="inline-block pull-right">
                                <i class="fa fa-pencil-square-o" aria-hidden="true">@project.BugsCount</i>
                                <i class="fa fa-users" aria-hidden="true">@project.UsersCount</i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    }
</div>
<div class="row Sort_Title_Pagination">
    <i class="fa fa-th-list col-lg-2" aria-hidden="true" style="font-size: 18px; padding: 0; margin: 0"> Projects: @Model.Count()</i>
    <div class=" pull-right" style="display: inline-block">
        <nav class="local-pagination">
            <ul class="pagination pagination-sm">
                <li><a href="#">1</a></li>
            </ul>
        </nav>
    </div>
</div>
